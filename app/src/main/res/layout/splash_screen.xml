    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/splash_screen_logo_height"
        android:layout_height="@dimen/splash_screen_logo_height"
        android:layout_margin="@dimen/margin_splash_screen_small"
        android:src="@drawable/captain_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/captain_logo" />
</android.support.constraint.ConstraintLayout>